<%@page import="exam03.*"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	String pw1 = request.getParameter("memberPw1");
	String pw2 = request.getParameter("memberPw2");
	String uriParam = request.getParameter("num");
	int num = Integer.parseInt(uriParam);
	
	MemberDao dao = new MemberDao();
	MemberService service = new MemberService(dao);
	MemberVo vo = service.read(num);
	
	if(vo.getMemberPw().equals(pw1)) {
		service.edit(vo);
		response.sendRedirect("/member/detail.jsp?num="+num);
	}else {
		response.sendRedirect("/memberForm.jsp?num=");
	}
%>    
